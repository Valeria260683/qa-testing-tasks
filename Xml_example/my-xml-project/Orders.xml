      </customer>
      <items>
        <item>
          <product>Книга</product>
          <quantity>2</quantity>
          <price>250</price>
        </item>
        <item>
          <product>Ручка</product>
          <quantity>5</quantity>
          <price>50</price>
        </item>
      </items>
    </order>